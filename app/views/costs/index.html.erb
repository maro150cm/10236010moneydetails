<p id="notice"><%= notice %></p>

<%= link_to 'New Cost', new_cost_path ,class:'btn btn-success' %>
<h1>March</h1>
<table class='table table-hover'>
  <thead>
    <tr>
      <th>日期</th>
      <th>內容</th>
      <th>金額</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @month3.each do |month| %>
      <tr>
        <td><%= month.cost_date %></td>
        <td><%= month.item %></td>
        <td><%= month.money %></td>
        <td><%= link_to 'Edit', edit_cost_path(month) %></td>
        <td><%= link_to 'Destroy', month, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
  </tbody>
  <tr>
      <td></td>
      <td>Total:</td>
      <td><%= @money3 %></td>
      <td colspan='2'></td>
  </tr>
</table>
<br>
